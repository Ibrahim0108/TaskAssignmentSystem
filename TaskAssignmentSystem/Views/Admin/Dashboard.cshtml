@{
    ViewData["Title"] = "Dashboard";
    ViewData["ActiveNav"] = "Dashboard";
    dynamic m = Model;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Task Assignment System</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #f0f9f0 0%, #e8f5e8 100%);
            min-height: 100vh;
            padding: 32px 20px;
            line-height: 1.6;
        }

        /* Container */
        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        /* Main layout */
        .dashboard-layout {
            display: flex;
            gap: 30px;
            margin-top: 30px;
        }

        .action-section {
            flex: 0 0 30%;
            max-width: 30%;
        }

        .stats-section {
            flex: 0 0 70%;
            max-width: 70%;
        }

        /* Grid System */
        .row {
            display: flex;
            flex-wrap: wrap;
            margin: 0 -12px;
        }

        .col-md-3 {
            flex: 0 0 25%;
            max-width: 25%;
            padding: 0 12px;
            margin-bottom: 24px;
        }

        .col-md-6 {
            flex: 0 0 50%;
            max-width: 50%;
            padding: 0 12px;
            margin-bottom: 24px;
        }

        .g-3 {
            margin: 0 -12px;
        }

        /* Card Styles */
        .card {
            background: linear-gradient(145deg, #ffffff 0%, #fefffe 100%);
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(34, 197, 94, 0.1), 0 4px 15px rgba(0, 0, 0, 0.05);
            border: 1px solid rgba(34, 197, 94, 0.1);
            position: relative;
            overflow: hidden;
            transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
            animation: fadeInUp 0.6s ease-out;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .card:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: 0 20px 50px rgba(34, 197, 94, 0.15), 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #22c55e 0%, #16a34a 50%, #15803d 100%);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .card:hover::before {
            opacity: 1;
        }

        .p-3 {
            padding: 32px 28px;
            position: relative;
        }

        /* Card Icons */
        .card-icon {
            position: absolute;
            top: 20px;
            right: 20px;
            width: 48px;
            height: 48px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            opacity: 0.7;
            transition: all 0.3s ease;
        }

        .card:hover .card-icon {
            opacity: 1;
            transform: scale(1.1) rotate(5deg);
        }

        /* Specific card styling */
        .card:nth-child(1) .card-icon {
            background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
            color: #1e40af;
        }

        .card:nth-child(2) .card-icon {
            background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
            color: #92400e;
        }

        .card:nth-child(3) .card-icon {
            background: linear-gradient(135deg, #dcfce7 0%, #bbf7d0 100%);
            color: #15803d;
        }

        .card:nth-child(4) .card-icon {
            background: linear-gradient(135deg, #fecaca 0%, #fca5a5 100%);
            color: #dc2626;
        }

        .card:nth-child(5) .card-icon {
            background: linear-gradient(135deg, #e0e7ff 0%, #c7d2fe 100%);
            color: #4338ca;
        }

        .card:nth-child(6) .card-icon {
            background: linear-gradient(135deg, #f3e8ff 0%, #ddd6fe 100%);
            color: #7c3aed;
        }

        /* Typography */
        .text-muted {
            color: #6b7280;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 12px;
            position: relative;
        }

        .small {
            font-size: 13px;
        }

        .display-6 {
            font-size: 48px;
            font-weight: 700;
            color: #16a34a;
            line-height: 1;
            margin-top: 8px;
            transition: all 0.3s ease;
        }

        .card:hover .display-6 {
            transform: scale(1.05);
            color: #15803d;
        }

        /* Action Buttons Section - NEW DESIGN */
        .action-buttons-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 15px 40px rgba(34, 197, 94, 0.2);
            border: 2px solid rgba(34, 197, 94, 0.15);
            height: fit-content;
            position: sticky;
            top: 30px;
        }

        .action-buttons-header {
            margin-bottom: 25px;
        }

        .action-buttons-title {
            color: #16a34a;
            font-size: 24px;
            font-weight: 700;
            margin-bottom: 8px;
        }

        .action-buttons-subtitle {
            color: #6b7280;
            font-size: 16px;
            margin-bottom: 20px;
        }

        .action-button {
            display: flex;
            flex-direction: column;
            padding: 20px;
            border-radius: 16px;
            margin-bottom: 20px;
            text-decoration: none;
            transition: all 0.3s ease;
            background: linear-gradient(145deg, #ffffff 0%, #f8f9fa 100%);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            border: 1px solid rgba(34, 197, 94, 0.1);
        }

            .action-button:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 25px rgba(34, 197, 94, 0.15);
                background: linear-gradient(145deg, #f8f9fa 0%, #ffffff 100%);
            }

        .action-button-primary {
            border-left: 4px solid #22c55e;
        }

        .action-button-secondary {
            border-left: 4px solid #4b5563;
        }

        .action-button-title {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 10px;
            font-weight: 600;
            font-size: 18px;
            color: #1f2937;
        }

        .action-button-icon {
            font-size: 20px;
            width: 36px;
            height: 36px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .action-button-primary .action-button-icon {
            background: linear-gradient(135deg, #dcfce7 0%, #bbf7d0 100%);
            color: #15803d;
        }

        .action-button-secondary .action-button-icon {
            background: linear-gradient(135deg, #e5e7eb 0%, #d1d5db 100%);
            color: #374151;
        }

        .action-button-description {
            color: #6b7280;
            font-size: 14px;
            line-height: 1.5;
            padding-left: 48px;
        }

        /* Dashboard Header */
        .dashboard-header {
            margin-bottom: 40px;
            text-align: center;
        }

        .dashboard-title {
            color: #16a34a;
            font-size: 36px;
            font-weight: 700;
            margin-bottom: 8px;
            letter-spacing: -1px;
        }

        .dashboard-subtitle {
            color: #6b7280;
            font-size: 18px;
            font-weight: 500;
        }

        /* Responsive Design */
        @@media (max-width: 992px) {
            .dashboard-layout

        {
            flex-direction: column;
        }

        .action-section, .stats-section {
            flex: 0 0 100%;
            max-width: 100%;
        }

        .col-md-3 {
            flex: 0 0 50%;
            max-width: 50%;
        }

        .col-md-6 {
            flex: 0 0 100%;
            max-width: 100%;
        }

        }

        @@media (max-width: 768px) {
            .col-md-3

        {
            flex: 0 0 100%;
            max-width: 100%;
        }

        .p-3 {
            padding: 24px 20px;
        }

        .display-6 {
            font-size: 36px;
        }

        .card-icon {
            width: 40px;
            height: 40px;
            font-size: 20px;
        }

        .dashboard-title {
            font-size: 28px;
        }

        .dashboard-subtitle {
            font-size: 16px;
        }

        .action-buttons-container {
            padding: 20px;
        }

        }

        @@media (max-width: 480px) {
            .p-3

        {
            padding: 20px 16px;
        }

        .display-6 {
            font-size: 32px;
        }

        .action-button-title {
            font-size: 16px;
        }

        .action-button-description {
            padding-left: 0;
        }

        }

        /* Animation delays for staggered effect */
        .card:nth-child(1) {
            animation-delay: 0.1s;
        }

        .card:nth-child(2) {
            animation-delay: 0.2s;
        }

        .card:nth-child(3) {
            animation-delay: 0.3s;
        }

        .card:nth-child(4) {
            animation-delay: 0.4s;
        }

        .card:nth-child(5) {
            animation-delay: 0.5s;
        }

        .card:nth-child(6) {
            animation-delay: 0.6s;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="dashboard-header">
            <h1 class="dashboard-title">Dashboard</h1>
            <p class="dashboard-subtitle">Overview of your Task Assignment System</p>
        </div>

        <div class="dashboard-layout">
            <!-- Action Buttons - Left Side -->
            <div class="action-section">
                <div class="action-buttons-container">
                    <div class="action-buttons-header">
                        <h2 class="action-buttons-title">Quick Actions</h2>
                        <p class="action-buttons-subtitle">Manage your system efficiently</p>
                    </div>

                    <a class="action-button action-button-primary" href="@Url.Action("Workspaces", "Admin")">
                        <div class="action-button-title">
                            <span class="action-button-icon">??</span>
                            <span>Manage Workspaces</span>
                        </div>
                        <p class="action-button-description">
                            Restore or De-Activate the workspaces
                        </p>
                    </a>

                    <a class="action-button action-button-secondary" href="@Url.Action("Users", "Admin")">
                        <div class="action-button-title">
                            <span class="action-button-icon">??</span>
                            <span>Manage Users</span>
                        </div>
                        <p class="action-button-description">
                            Manage Teachers and Admins
                        </p>
                    </a>
                </div>
            </div>

            <!-- Statistics Cards - Right Side -->
            <div class="stats-section">
                <div class="row g-3">
                    <div class="col-md-3">
                        <div class="card p-3">
                            <div class="card-icon">??</div>
                            <div class="text-muted small">Total Users</div>
                            <div class="display-6">@m.TotalUsers</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card p-3">
                            <div class="card-icon">?????</div>
                            <div class="text-muted small">Teachers</div>
                            <div class="display-6">@m.TotalTeachers</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card p-3">
                            <div class="card-icon">??</div>
                            <div class="text-muted small">Students</div>
                            <div class="display-6">@m.TotalStudents</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card p-3">
                            <div class="card-icon">?</div>
                            <div class="text-muted small">Pending Approvals</div>
                            <div class="display-6">@m.PendingUsers</div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card p-3">
                            <div class="card-icon">?</div>
                            <div class="text-muted small">Active Workspaces</div>
                            <div class="display-6">@m.ActiveWorkspaces</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card p-3">
                            <div class="card-icon">??</div>
                            <div class="text-muted small">Inactive Workspaces</div>
                            <div class="display-6">@m.InactiveWorkspaces</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Add counter animation effect
        function animateCounter(element, target) {
            let current = 0;
            const increment = target / 50;
            const timer = setInterval(() => {
                current += increment;
                if (current >= target) {
                    current = target;
                    clearInterval(timer);
                }
                element.textContent = Math.floor(current);
            }, 30);
        }

        // Animate counters when page loads
        window.addEventListener('load', () => {
            const counters = document.querySelectorAll('.display-6');
            counters.forEach((counter, index) => {
                setTimeout(() => {
                    const target = parseInt(counter.textContent);
                    animateCounter(counter, target);
                }, index * 100);
            });
        });

        // Add click feedback to buttons
        document.querySelectorAll('.action-button').forEach(btn => {
            btn.addEventListener('click', function(e) {
                // Create ripple effect
                const ripple = document.createElement('span');
                const rect = this.getBoundingClientRect();
                const size = Math.max(rect.width, rect.height);
                const x = e.clientX - rect.left - size / 2;
                const y = e.clientY - rect.top - size / 2;

                ripple.style.cssText = `
                    position: absolute;
                    width: ${size}px;
                    height: ${size}px;
                    left: ${x}px;
                    top: ${y}px;
                    background: rgba(255, 255, 255, 0.5);
                    border-radius: 50%;
                    transform: scale(0);
                    animation: ripple 0.6s ease-out;
                    pointer-events: none;
                `;

                this.style.position = 'relative';
                this.style.overflow = 'hidden';
                this.appendChild(ripple);

                setTimeout(() => {
                    ripple.remove();
                }, 600);
            });
        });

        // Add ripple animation
        const style = document.createElement('style');
        style.textContent = `
            @@keyframes ripple {
                to {
                    transform: scale(2);
                    opacity: 0;
                }
            }
        `;
        document.head.appendChild(style);
    </script>
</body>
</html>