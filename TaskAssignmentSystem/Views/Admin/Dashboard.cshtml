@{
    var m = (dynamic)Model;
}
<div class="container mt-4">
    <h3>Admin Dashboard</h3>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <div class="card mb-3"><div class="card-body">
                <div>Total Users</div>
                <div class="fs-4">@m.TotalUsers</div>
            </div></div>
        </div>
        <div class="col-md-3">
            <div class="card mb-3"><div class="card-body">
                <div>Teachers</div>
                <div class="fs-4">@m.TotalTeachers</div>
            </div></div>
        </div>
        <div class="col-md-3">
            <div class="card mb-3"><div class="card-body">
                <div>Students</div>
                <div class="fs-4">@m.TotalStudents</div>
            </div></div>
        </div>
        <div class="col-md-3">
            <div class="card mb-3"><div class="card-body">
                <div>Pending Users</div>
                <div class="fs-4">@m.PendingUsers</div>
            </div></div>
        </div>
    </div>

    <a class="btn btn-primary" href="/Admin/Users">Manage Users</a>
    <a class="btn btn-outline-secondary ms-2" href="/Admin/Workspaces">Workspaces</a>
</div>
