@using TaskAssignmentSystem.Models.Workspaces
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Manage Workspaces";
    ViewData["ActiveNav"] = "AdminWorkspaces";
    dynamic model = Model;
    List<Workspace> active = model.Active;
    List<Workspace> inactive = model.Inactive;
    var isAdmin = Context.Session.GetString("UserRole") == "Admin";
    var userId = Context.Session.GetInt32("UserId");
}
<div class="container mt-2">
    <h3 class="mb-3">Manage Workspaces</h3>

    <div class="row g-4">
        <div class="col-12">
            <div class="card p-3">
                <h5 class="mb-3">Active</h5>
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead><tr><th>Id</th><th>Name</th><th>Join Code</th><th>Owner</th><th>Action</th></tr></thead>
                        <tbody>
                            @foreach (var w in active)
                            {
                                <tr>
                                    <td>@w.Id</td>
                                    <td>@w.Name</td>
                                    <td><code>@w.JoinCode</code></td>
                                    <td>@w.CreatedByUserId</td>
                                    <td>
                                        @if (userId.HasValue && w.CreatedByUserId == userId.Value)
                                        {
                                            <form method="post" asp-action="Deactivate" asp-controller="Admin" class="d-inline">
                                                <input type="hidden" name="id" value="@w.Id" />
                                                <button class="btn btn-sm btn-warning">Deactivate</button>
                                            </form>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card p-3">
                <h5 class="mb-3">Inactive</h5>
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead><tr><th>Id</th><th>Name</th><th>Join Code</th><th>Owner</th><th>Action</th></tr></thead>
                        <tbody>
                            @foreach (var w in inactive)
                            {
                                <tr>
                                    <td>@w.Id</td>
                                    <td>@w.Name</td>
                                    <td><code>@w.JoinCode</code></td>
                                    <td>@w.CreatedByUserId</td>
                                    <td>
                                        @if (isAdmin)
                                        {
                                            <form method="post" asp-action="Restore" asp-controller="Admin" class="d-inline">
                                                <input type="hidden" name="id" value="@w.Id" />
                                                <button class="btn btn-sm btn-success">Restore</button>
                                            </form>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <a class="btn btn-secondary mt-3" href="@Url.Action("Dashboard", "Admin")">Back to Dashboard</a>
            </div>
        </div>
    </div>
</div>
