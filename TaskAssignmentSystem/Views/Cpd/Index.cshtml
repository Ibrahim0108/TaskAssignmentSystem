@model IEnumerable<TaskAssignmentSystem.Models.Cpd.CpdEntry>

@{
    ViewData["Title"] = "CPD Entries";
}

<div class="container mt-4">
    <h2 class="mb-4">📘 CPD Entries</h2>

    <a asp-action="Create" class="btn btn-primary mb-3">➕ Add New Entry</a>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Hours</th>
                <th>Date</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Hours</td>
                    <td>@item.Date.ToShortDateString()</td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">🔍 View</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">✏️ Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">🗑️ Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
