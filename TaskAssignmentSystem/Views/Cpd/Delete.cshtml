@model TaskAssignmentSystem.Models.Cpd.CpdEntry

@{
    ViewData["Title"] = "Delete CPD Entry";
}

<div class="container mt-4">
    <h2 class="text-danger">⚠️ Delete CPD Entry</h2>
    <hr />

    <p>Are you sure you want to delete this entry?</p>

    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Hours</dt>
        <dd class="col-sm-10">@Model.Hours</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">🗑️ Confirm Delete</button>
        <a asp-action="Index" class="btn btn-secondary">↩️ Cancel</a>
    </form>
</div>
