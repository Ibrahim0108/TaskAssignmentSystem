@{
    ViewData["Title"] = "Create Team";
    var workspaceId = (int)ViewBag.WorkspaceId;
}
<div class="container mt-4" style="max-width:560px;">
    <h3>Create Team</h3>
    <hr />
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    <form method="post" asp-action="Create">
        <input type="hidden" name="workspaceId" value="@workspaceId" />
        <div class="mb-3">
            <label class="form-label">Team Name</label>
            <input name="name" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Leader User Id</label>
            <input name="leaderUserId" type="number" class="form-control" placeholder="Enter user id of leader" required />
        </div>
        <button class="btn btn-primary" type="submit">Create</button>
        <a class="btn btn-link" href="/Teams/ForWorkspace/@workspaceId">Cancel</a>
    </form>
</div>