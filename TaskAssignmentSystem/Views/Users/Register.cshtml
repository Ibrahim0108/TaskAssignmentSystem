@using TaskAssignmentSystem.Models.Users
@{
    ViewData["Title"] = "Register";
    ViewData["ActiveNav"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card p-4 mt-4">
            <h3 class="mb-3 text-center">Create your account</h3>
            <p class="text-muted text-center">Students are auto-approved. Teachers/Admins require admin approval.</p>

            <form asp-action="Register" asp-controller="Users" method="post">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Username</label>
                        <input name="username" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Full Name</label>
                        <input name="fullName" class="form-control" required />
                    </div>
                    <div class="col-12">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Password</label>
                        <input name="password" type="password" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Role</label>
                        <select name="role" class="form-select" id="roleSelect" required>
                            <option value="@Role.Teacher">Teacher</option>
                            <option value="@Role.Student">Student</option>
                        </select>
                    </div>

                    <!-- Fields for student or teacher -->
                    <div id="studentTeacherFields" class="row">
                        <div class="col-md-12 mb-3">
                            <label class="form-label">Department / Stream</label>
                            <input name="department" class="form-control" />
                        </div>
                        <div class="col-md-6" id="yearField">
                            <label class="form-label">Year</label>
                            <input name="year" type="number" class="form-control" min="1" max="4" placeholder="(Students only)" />
                        </div>
                        <div class="col-md-6" id="sectionField">
                            <label class="form-label">Section</label>
                            <input name="section" class="form-control" placeholder="(optional)" />
                        </div>
                    </div>
                </div>

                <div class="text-center mt-3">
                    <button class="btn btn-primary" type="submit">Create account</button>
                </div>
            </form>

            <div class="text-center mt-3">
                <small class="text-muted">Already have an account?</small>
                <a href="@Url.Action("Login", "Users")" class="ms-1">Login</a>
            </div>
        </div>
    </div>
</div>


<style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #f0f9f0 0%, #e8f5e8 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        /* Grid System */
        .row {
            display: flex;
            flex-wrap: wrap;
            margin: 0 -15px;
            width: 100%;
            max-width: 1200px;
        }

        .justify-content-center {
            justify-content: center;
        }

        .col-md-8 {
            flex: 0 0 66.666667%;
            max-width: 66.666667%;
            padding: 0 15px;
        }

        .col-lg-6 {
            flex: 0 0 50%;
            max-width: 50%;
        }

        .col-md-6 {
            flex: 0 0 50%;
            max-width: 50%;
            padding: 0 15px;
        }

        .col-12 {
            flex: 0 0 100%;
            max-width: 100%;
            padding: 0 15px;
        }

        .g-3 {
            margin: 0 -12px;
        }

        .g-3 > * {
            padding: 0 12px;
            margin-bottom: 24px;
        }

        /* Card Styles */
        .card {
            background: linear-gradient(135deg, #ffffff 0%, #fefffe 100%);
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(34, 197, 94, 0.1);
            border: 1px solid rgba(34, 197, 94, 0.1);
            position: relative;
            overflow: hidden;
            animation: slideInUp 0.6s ease-out;
        }

        @@keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #22c55e 0%, #16a34a 50%, #15803d 100%);
        }

        .p-4 {
            padding: 40px;
        }

        .mt-4 {
            margin-top: 32px;
        }

        /* Typography */
        h3 {
            color: #16a34a;
            font-size: 28px;
            font-weight: 700;
            letter-spacing: -0.5px;
        }

        .mb-3 {
            margin-bottom: 24px;
        }

        .text-center {
            text-align: center;
        }

        .text-muted {
            color: #6b7280;
            font-size: 15px;
            font-weight: 500;
            line-height: 1.5;
        }

        /* Form Styles */
        form {
            margin-bottom: 0;
        }

        .form-label {
            display: block;
            margin-bottom: 8px;
            color: #374151;
            font-weight: 600;
            font-size: 14px;
            letter-spacing: 0.5px;
            text-transform: uppercase;
        }

        .form-control, .form-select {
            width: 100%;
            padding: 14px 16px;
            border: 2px solid #e5e7eb;
            border-radius: 12px;
            font-size: 16px;
            background: #fafafa;
            transition: all 0.3s ease;
            color: #374151;
            font-family: inherit;
        }

        .form-control:focus, .form-select:focus {
            outline: none;
            border-color: #22c55e;
            background: white;
            box-shadow: 0 0 0 3px rgba(34, 197, 94, 0.1);
            transform: translateY(-1px);
        }

        .form-control:hover, .form-select:hover {
            border-color: #d1d5db;
            background: white;
        }

        .form-control::placeholder {
            color: #9ca3af;
            font-style: italic;
        }

        .form-select {
            cursor: pointer;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='m6 8 4 4 4-4'/%3e%3c/svg%3e");
            background-position: right 12px center;
            background-repeat: no-repeat;
            background-size: 16px;
            padding-right: 40px;
        }

        /* Button Styles */
        .btn {
            padding: 14px 32px;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
            display: inline-block;
            text-align: center;
            font-family: inherit;
        }

        .btn-primary {
            background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
            color: white;
            box-shadow: 0 4px 15px rgba(34, 197, 94, 0.3);
            min-width: 160px;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #16a34a 0%, #15803d 100%);
            box-shadow: 0 8px 25px rgba(34, 197, 94, 0.4);
            transform: translateY(-2px);
        }

        .btn-primary:active {
            transform: translateY(0);
            box-shadow: 0 4px 15px rgba(34, 197, 94, 0.3);
        }

        /* Link Styles */
        a {
            color: #16a34a;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s ease;
        }

        a:hover {
            color: #15803d;
            text-decoration: underline;
        }

        .ms-1 {
            margin-left: 4px;
        }

        .mt-3 {
            margin-top: 24px;
        }

        /* Additional styling */
        .register-footer {
            padding-top: 20px;
            border-top: 1px solid rgba(34, 197, 94, 0.1);
        }

        .register-footer small {
            color: #9ca3af;
            font-size: 14px;
        }

        /* Field visibility animation */
        #studentTeacherFields {
            transition: all 0.3s ease;
        }

        #yearField {
            transition: all 0.3s ease;
        }

        .field-hidden {
            opacity: 0.5;
            pointer-events: none;
        }

        /* Info badge for role selection */
        .role-info {
            background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
            border: 1px solid #3b82f6;
            border-radius: 8px;
            padding: 12px 16px;
            margin-top: 16px;
            font-size: 14px;
            color: #1e40af;
            display: none;
        }

        .role-info.show {
            display: block;
            animation: fadeIn 0.3s ease;
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Input validation styles */
        .form-control:invalid:not(:placeholder-shown) {
            border-color: #ef4444;
            background: #fef2f2;
        }

        .form-control:valid:not(:placeholder-shown) {
            border-color: #22c55e;
            background: #f0fdf4;
        }

        /* Responsive Design */
        @@media (max-width: 992px) {
            .col-lg-6 {
                flex: 0 0 75%;
                max-width: 75%;
            }
        }

        @@media (max-width: 768px) {
            .col-md-8 {
                flex: 0 0 100%;
                max-width: 100%;
            }

            .col-lg-6 {
                flex: 0 0 100%;
                max-width: 100%;
            }

            .col-md-6 {
                flex: 0 0 100%;
                max-width: 100%;
            }

            .p-4 {
                padding: 32px 24px;
            }

            h3 {
                font-size: 24px;
            }

            .text-muted {
                font-size: 14px;
            }

            body {
                padding: 15px;
            }

            .g-3 {
                margin: 0 -8px;
            }

            .g-3 > * {
                padding: 0 8px;
                margin-bottom: 20px;
            }
        }

        @@media (max-width: 480px) {
            .p-4 {
                padding: 24px 20px;
            }

            .form-control, .form-select {
                padding: 12px 14px;
                font-size: 16px;
            }

            .btn {
                padding: 12px 24px;
                width: 100%;
            }
        }
    </style>


@section Scripts {
    <script>
        const roleSelect = document.getElementById('roleSelect');
        const studentTeacherFields = document.getElementById('studentTeacherFields');
        const yearField = document.getElementById('yearField');
        const sectionField = document.getElementById('sectionField');

        function updateFields() {
            const role = roleSelect.value;
            if(role === '@Role.Student') {
                studentTeacherFields.style.display = 'flex';
                yearField.style.display = 'block';
                sectionField.style.display = 'block';
                studentTeacherFields.querySelector('input[name="department"]').required = true;
                studentTeacherFields.querySelector('input[name="year"]').required = true;
            }
            else if(role === '@Role.Teacher') {
                studentTeacherFields.style.display = 'flex';
                yearField.style.display = 'none';
                sectionField.style.display = 'none';
                studentTeacherFields.querySelector('input[name="department"]').required = true;
                studentTeacherFields.querySelector('input[name="year"]').required = false;
            }
            else {
                // Admin
                studentTeacherFields.style.display = 'none';
                studentTeacherFields.querySelector('input[name="department"]').required = false;
                studentTeacherFields.querySelector('input[name="year"]').required = false;
            }
        }

        roleSelect.addEventListener('change', updateFields);
        window.addEventListener('load', updateFields);
    </script>
}
