@{
    ViewData["Title"] = "Create Workspace";
    ViewData["ActiveNav"] = "CreateWorkspace";
}
<div class="custom-row justify-content-center">
    <div class="custom-col">
        <div class="card p-4 mt-3">
            <h3 class="mb-3">Create a new workspace</h3>
            <form asp-action="Create" asp-controller="Workspaces" method="post">
                <div class="mb-3">
                    <label class="form-label">Workspace Name</label>
                    <input name="name" class="form-control" required maxlength="100" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Year</label>
                    <select name="year" class="form-select" required>
                        <option value="">-- Select Year --</option>
                        <option value="1">1st Year</option>
                        <option value="2">2nd Year</option>
                        <option value="3">3rd Year</option>
                        <option value="4">4th Year</option>
                    </select>
                </div>

                <!-- custom checkbox (replace your previous .form-check block) -->
                <div class="custom-checkbox-row mb-3">
                    <label class="custom-checkbox" for="isTeamBased">
                        <input type="checkbox" id="isTeamBased" name="isTeamBased" value="true" />
                        <span class="custom-box" aria-hidden="true"></span>
                        <span class="custom-text">This workspace is team-based</span>
                    </label>
                </div>


                <button class="btn btn-primary" type="submit">Create</button>
                <a class="btn btn-outline-secondary ms-2" href="@Url.Action("Index", "Workspaces")">Cancel</a>
            </form>
        </div>
    </div>
</div>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #f8fffe 0%, #f0fdf4 100%);
        min-height: 100vh;
        padding: 40px 20px;
        line-height: 1.6;
    }

    /* Container */
    .custom-row {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        margin: 0 auto;
        padding: 20px;
    }

    .custom-col {
        flex: 0 0 100%;
        max-width: 100%;
    }

    /* Card */
    .card {
        background: linear-gradient(145deg, #ffffff 0%, #fefffe 100%);
        border: 1px solid rgba(34, 197, 94, 0.08);
        border-radius: 24px;
        box-shadow: 0 25px 60px rgba(34, 197, 94, 0.06), 0 15px 40px rgba(0, 0, 0, 0.03);
        position: relative;
        overflow: hidden;
        transition: all 0.4s ease;
        animation: slideUp 0.8s ease-out;
    }

        .card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #22c55e 0%, #16a34a 50%, #15803d 100%);
        }

        .card:hover {
            transform: translateY(-6px);
        }

    @@keyframes slideUp {
        from

    {
        opacity: 0;
        transform: translateY(40px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .p-4 {
        padding: 40px;
    }

    .mt-3 {
        margin-top: 32px;
    }

    .mb-3 {
        margin-bottom: 24px;
    }

    .ms-2 {
        margin-left: 16px;
    }

    /* Heading */
    h3 {
        color: #15803d;
        font-size: 28px;
        font-weight: 700;
        letter-spacing: -0.5px;
        margin-bottom: 32px;
        padding-left: 45px;
        position: relative;
    }

        h3::before {
            content: '🌱';
            position: absolute;
            left: 0;
            top: -2px;
            font-size: 28px;
        }

        h3::after {
            content: '';
            position: absolute;
            bottom: -8px;
            left: 45px;
            width: 120px;
            height: 3px;
            background: linear-gradient(90deg, #22c55e, #15803d);
            border-radius: 2px;
        }

    /* Input + Select */
    .form-control, .form-select {
        width: 100%;
        padding: 16px 20px;
        border: 2px solid rgba(34,197,94,.15);
        border-radius: 12px;
        font-size: 16px;
        font-weight: 500;
        color: #374151;
        background: #fff;
        transition: all .3s ease;
        box-shadow: 0 2px 8px rgba(34,197,94,.05);
    }

        .form-control:focus, .form-select:focus {
            border-color: #22c55e;
            box-shadow: 0 0 0 4px rgba(34,197,94,.08);
            background: #f0fdf4;
            transform: translateY(-2px);
        }

        .form-control:hover, .form-select:hover {
            border-color: #16a34a;
        }

    /* Remove "x" clear button */
    input::-ms-clear, input::-ms-reveal {
        display: none;
        width: 0;
        height: 0;
    }

    input[type="text"]::-webkit-search-decoration,
    input[type="text"]::-webkit-search-cancel-button,
    input[type="text"]::-webkit-search-results-button,
    input[type="text"]::-webkit-search-results-decoration {
        display: none;
    }

    /* Checkbox */
    .form-check {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 16px 20px;
        border: 2px solid rgba(34,197,94,.08);
        border-radius: 12px;
        background: #f9fafb;
        cursor: pointer;
    }

    .form-check-input {
        width: 20px;
        height: 20px;
        margin: 0;
        border: 2px solid #d1d5db;
        border-radius: 6px;
        appearance: none;
        background: #fff;
        flex-shrink: 0;
    }

        .form-check-input:checked {
            background: linear-gradient(135deg,#22c55e 0%,#15803d 100%);
            border-color: #22c55e;
        }

            .form-check-input:checked::after {
                content: '✓';
                color: #fff;
                font-size: 12px;
                font-weight: bold;
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%,-50%);
            }

    .form-check-label {
        color: #374151;
        font-weight: 500;
        font-size: 16px;
        cursor: pointer;
    }

    /* Buttons */
    .btn {
        padding: 16px 32px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 16px;
        border: 2px solid;
    }

    .btn-primary {
        background: linear-gradient(135deg,#22c55e 0%,#15803d 100%);
        border-color: #15803d;
        color: #fff;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg,#15803d 0%,#14532d 100%);
        }

    .btn-outline-secondary {
        border-color: #d1d5db;
        color: #6b7280;
    }
    /* Custom checkbox component - matches your green theme */
    .custom-checkbox-row {
        /* keeps spacing consistent with other .mb-3 rules */
        margin-bottom: 24px;
    }

    /* Label acts as the click area */
    .custom-checkbox {
        display: inline-flex;
        align-items: center;
        gap: 12px;
        padding: 14px 45px;
        border-radius: 12px;
        background: linear-gradient(145deg, #f9fafb 0%, #f3f4f6 100%);
        border: 2px solid rgba(34,197,94,0.08);
        cursor: pointer;
        user-select: none;
        transition: all .18s ease;
        font-weight: 500;
        color: #374151;
    }

        /* hover / active visual */
        .custom-checkbox:hover {
            transform: translateY(-1px);
            border-color: rgba(34,197,94,0.13);
            box-shadow: 0 6px 16px rgba(34,197,94,0.06);
        }

        /* visually hide the real checkbox but keep it accessible */
        .custom-checkbox input[type="checkbox"] {
            position: absolute;
            opacity: 0;
            width: 0;
            height: 0;
            margin: 0;
            pointer-events: none;
        }

    /* the visible box */
    .custom-box {
        width: 22px;
        height: 22px;
        min-width: 22px;
        border-radius: 6px;
        border: 2px solid #d1d5db;
        background: #fff;
        display: inline-block;
        box-shadow: 0 2px 8px rgba(34,197,94,0.03);
        position: relative;
        transition: all .18s ease;
        flex-shrink: 0;
    }

        /* checkmark element using ::after */
        .custom-box::after {
            content: "";
            position: absolute;
            left: 50%;
            top: 50%;
            width: 10px;
            height: 6px;
            border-left: 2px solid transparent;
            border-bottom: 2px solid transparent;
            transform: translate(-50%, -55%) rotate(-45deg) scale(0.8);
            opacity: 0;
            transition: all .16s ease;
        }

    /* when checkbox is checked — use sibling selector via :checked on input inside label */
    .custom-checkbox input[type="checkbox"]:checked ~ .custom-box {
        background: linear-gradient(135deg, #22c55e 0%, #15803d 100%);
        border-color: #22c55e;
        box-shadow: 0 4px 12px rgba(34,197,94,0.2);
    }



    /* Focus-visible for keyboard users */
    .custom-checkbox input[type="checkbox"]:focus-visible ~ .custom-box {
        outline: 3px solid rgba(34,197,94,0.25);
        outline-offset: 3px;
    }

    /* Text */
    .custom-text {
        font-size: 16px;
        color: #374151;
    }

    /* Checked label style (subtle) */
    .custom-checkbox input[type="checkbox"]:checked ~ .custom-text {
        color: #14532d;
        font-weight: 600;
    }

    /* Small screen tweaks */
    @@media (max-width: 576px) {
        .custom-checkbox

    {
        padding: 12px 14px;
        gap: 10px;
    }

    .custom-box {
        width: 20px;
        height: 20px;
        min-width: 20px;
    }

    .custom-text {
        font-size: 15px;
    }

    }

    /* Responsive */
    @@media (max-width:992px) {
        .custom-col

    {
        flex: 0 0 60%;
        max-width: 60%;
    }

    }
    @@media (max-width:768px) {
        .custom-col

    {
        flex: 0 0 80%;
        max-width: 80%;
    }

    .p-4 {
        padding: 24px;
    }

    .btn {
        width: 100%;
        margin-bottom: 12px;
    }

    .ms-2 {
        margin-left: 0;
    }

    }
    @@media (max-width:576px) {
        .custom-col

    {
        flex: 0 0 100%;
        max-width: 100%;
    }

    h3 {
        font-size: 20px;
        text-align: center;
        padding-left: 0;
    }

        h3::before {
            position: static;
            display: block;
            margin-bottom: 8px;
        }

        h3::after {
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
        }

    }
</style>

<script>
    document.querySelector('form').addEventListener('submit', function(e) {
        const submitBtn = this.querySelector('.btn-primary');
        const originalText = submitBtn.textContent;

        submitBtn.disabled = true;
        submitBtn.innerHTML = '🌱 Creating...';

        setTimeout(() => {
            submitBtn.innerHTML = '✅ Created!';
            const card = document.querySelector('.card');
            const successMsg = document.createElement('div');
            successMsg.innerHTML = `<div style="
                background:#dcfce7; color:#15803d; padding:16px; border-radius:12px;
                margin-top:20px; text-align:center; font-weight:600; border:2px solid #22c55e;
            ">🎉 Workspace created successfully!</div>`;
            card.appendChild(successMsg);

            setTimeout(() => {
                submitBtn.disabled = false;
                submitBtn.innerHTML = originalText;
                successMsg.remove();
            }, 3000);
        }, 2000);
    });
</script>
